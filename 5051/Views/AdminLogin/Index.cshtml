
@{
    ViewBag.Title = "Index";
}

<head>
    <!-- Link for the Roboto Thin style -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100" rel="stylesheet">
    <!-- Style used for Student Page -->
    <style>
        /* light Teal background */
        body {
            background-color: #67C1C1;
        }
        /* Yellow Title */
        h1 {
            color: #FFC526;
            font-family: 'Roboto', sans-serif;
            font-size: 48px;
        }

        .content {
            background-color: #FEBC04;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .titleAdmin {
            color: #137F7A;
            text-align: center;
            font-family: 'Roboto', sans-serif;
        }
        /* Container for each line of badges */
        badgeRow {
            color: #4DADAB;
        }
    </style>
</head>


<div class="text-center">
    <div class="row">
        <div class="col-lg-12">
            <img class="mb-4" src="~/Content/img/logos/logo_white.png" alt="">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <form class="form-signin" action="~/Admin/Student">

                <h2 class="titleAdmin"><b>Administrator Login</b></h2>
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                <button class="btn content" type="submit">Login</button>
                <p>Forgot Password?</p>
                <a href="#">Reset Password</a>

            </form>
        </div>
        <div class="col-lg-4"></div>

    </div>
</div>
