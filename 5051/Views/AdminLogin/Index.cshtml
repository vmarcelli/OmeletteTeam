
@{
    ViewBag.Title = "Index";
}

<head>
    <!-- Link for the Roboto Thin style -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100" rel="stylesheet">

    <!--Link to adminLogin.css-->
    <link rel="stylesheet" type="text/css" href="~/Content/adminLogin.css">

</head>

    <div class="row">
        <div class="center-block col-lg-12 logo">
            <center><img src="~/Content/img/logos/logo_white.png" alt=""></center>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form class="form-signin" action="~/Admin/Student">
                <center>
                    <h2 class="titleAdmin"><b>Administrator Login</b></h2>
                    <label for="inputEmail" class="sr-only">Email address</label>
                    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" autofocus>
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" id="inputPassword" class="form-control" placeholder="Password">
                    <button class="btn content" type="submit">Login</button>
                    <p>Forgot Password?</p>
                    <a href="#">Reset Password</a>
                </center>
            </form>
        </div>
    </div>
