
@{
    ViewBag.Title = "Settings";
}

<head>
    <!-- Link for the Roboto Thin style -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100" rel="stylesheet">
    <!-- Style used for Student Page -->
    <style>
        /* light Teal background */
        body {
            background-color: #67C1C1;
        }
        /* Yellow Title */
        h1 {
            color: #FFC526;
            font-family: 'Roboto', sans-serif;
            font-size: 48px;
            display: inline-block;
        }


        .logo {
            padding: 10px 0px 0px 0px;
            display: inline-block;
        }

        .formPadding {
            padding: 20px 0px 20px 0px;
        }

        .outerContainer {
            background-color: #E0E0E0;
            padding: 10px 10px 10px 10px;
        }

        .innerContainer {
            background-color: #FFFFFF;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #DDB36B;
            outline-color: #DDB36B;
            border: none;
        }

    </style>

</head>

<div class="row">
    <div class="center-block col-lg-12 logo">
        <img src="~/Content/img/logos/logo_white.png" alt="">
        <h1><b>Admin</b></h1>
    </div>
</div>
<div class="container">

    <ul class="nav nav-tabs">
        <li><a href="~/Admin/Student/">Student</a></li>
        <li><a href="~/Admin/Report/">Reporting</a></li>
        <li><a href="~/Admin/Calendar/">Calendar</a></li>
        <li class="active"><a a data-toggle="tab" href="~/Admin/Settings/">Settings</a></li>
    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            <div class="outerContainer">
                <button type="button" class="btn btn-primary">Add Administrator Account</button>
                
                <div class="innerContainer">
                    <br />
                    <h3>Settings</h3>
                    <br />

                    <!-- reset calender year -->
                    <div class="row">

                        <div class="col-md-3">
                            <p>Reset calender year</p>
                        </div>

                        <div class="col-md-9">
                            <button type="button" class="btn btn-primary">Reset</button>
                        </div>
                        <br />

                    </div>
                    <br />

                    <!-- add admin -->
                    <div class="row">
                        <div class="col-md-3">
                            <p>Add administrator</p>
                        </div>

                        <div class="col-md-9">
                            <button type="button" class="btn btn-primary">+</button>
                        </div>
                        <br />

                    </div>
                    <br />

                    <!-- remove admin -->
                    <div class="row">
                        <div class="col-md-3">
                            <p>Remove administrator</p>
                        </div>

                        <div class="col-md-9">
                            <button type="button" class="btn btn-primary">-</button>
                        </div>
                        <br />
                    </div>
                    <br />

                </div>
            </div>
        </div>
    </div>
</div>

