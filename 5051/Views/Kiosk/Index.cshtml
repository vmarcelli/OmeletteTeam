@model _5051.Models.StudentViewModel

@{
    ViewBag.Title = "Index";
}

<head>
    @*imports google roboto font*@
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/kiosk.css">

</head>

<body class="kiosk-body">
    <div class="text-center">
        <div class="row">
            @*SnapAttendance logo*@
            <img class="logo" src="~/Content/img/logos/logo_white.png" alt="SnapAttendanceLogo">
        </div>

        <div id="showgrid">
            <div class="row">
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-John.jpg" alt="John">
                    <p>John</p>
                </div>
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Jess.jpg" alt="Jess">
                    <p>Jess</p>
                </div>
                <div class="col-md-4 column">
                    <a id="danielClick" href="#clickNotification"><img src="~/Content/img/student-Daniel.jpg" alt="Daniel"></a>
                    <p>Daniel</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Jason.jpg" alt="Jason">
                    <p>Jason</p>
                </div>
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Dwayne.jpg" alt="Dwayne">
                    <p>Dwayne</p>
                </div>
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Reggie.jpg" alt="Reggie">
                    <p>Reggie</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Sarah.jpg" alt="Sarah">
                    <p>Sarah</p>
                </div>
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Taylor.jpg" alt="Taylor">
                    <p>Taylor</p>
                </div>
                <div class="col-md-4 column">
                    <img src="~/Content/img/student-Korina.jpg" alt="Korina">
                    <p>Korina</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Early Bird Information POPUP-->
    <div id="clickNotification" class="ClickOverlay">
        <div class="ClickPopup">
            <img src="~/Content/img/" alt="Reggie">
        </div>
    </div>

</body>



