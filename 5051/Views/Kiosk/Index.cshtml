@model _5051.Models.StudentViewModel

@{
    ViewBag.Title = "Index";
}

<head>
    @*imports google roboto font*@
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/kiosk.css">
    <script type="text/javascript" src="~/Scripts/kiosk.js"></script>
</head>

<body class="kiosk-body">
    <div class="text-center">
        <div class="row">
            @*SnapAttendance logo*@
            <img class="logo" src="~/Content/img/logos/logo_white.png" alt="SnapAttendanceLogo">
        </div>

        @*grid of students, image is clickable*@
        <div id="showgrid">


            @{


                    foreach (var item in Model.StudentList)
                    {
                        
                        <div class="col-md-3">
                            <div class="box">
                                <img class="photo" src="~/Content/img/@item.AvatarId" alt="Student Image">
                                <p>@item.Name @item.Status</p>
                                
                                @using (Html.BeginForm())
                                {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => item.Id)
                                <br />
                                <br />
                                <div class="row">
                                    <div class="col-sm-3 text-right">
                                    </div>
                                    <div class="col-sm-4">
                                        @Html.ActionLink("Update", "Index", new { id = item.Id }, new { @class = "btn btn-primary" })
                                    </div>
                                </div>
                                }
                            </div>
                        </div> 
                    }
            }
        </div>
    </div>
</body>

<!-- Sign In Modal -->
<div id="in" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <img class="img-responsive" src="~/Content/img/SignInMessage.png" alt="ClickIn" width="300">
    </div>

</div>

<!-- Sign Out Modal -->
<div id="out" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <img class="img-responsive" src="~/Content/img/SignedOutMessage.png" alt="ClickIn" width="300">
    </div>
</div>


